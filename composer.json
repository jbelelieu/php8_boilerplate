{
    "type": "project",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require": {
        "php": "^8.0.8",
        "phpdocumentor/phpdocumentor": "^3.1",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4",
        "phpunit/phpunit": "^9.5",
        "vimeo/psalm": "^4.15"
    },
    "scripts": {
        "analysis": [
            "./vendor/bin/psalm"
        ],
        "document": [
            "./vendor/bin/phpdoc run -d /src -t /docs"
        ],
        "lint": [
            "./vendor/bin/php-cs-fixer --config=./.php-cs-fixer-dist.php -v"
        ],
        "test": [
            "export APP_ENV=test && ./vendor/bin/phpunit --testdox -c ./phpunit.xml.dist"
        ]
    }
}